@using Efendioglu.Models;
@model List<Yapi>
@{
    ViewBag.Title = "Yapilar";
    
}

@Html.Partial("partial_view")

<h2>Yapilar</h2>
<h3><strong>@ViewBag.YapiSayisi </strong> yapı mevcut</h3>

<div>
    @foreach (var yapi in Model)
    {
        <div class="d-flex">
            <div class="flex-shrink-0">
                <img src="@Url.Content("~/" + yapi.DosyaYolu.Replace(Server.MapPath("~"), ""))" alt=" " width="500" height="500"><!-- bu kısma veri tabanı eklenince dinamik olarak fotolar eklenecek-->
            </div>
            <div class="flex-grow-1 ms-3">
                <p>@yapi.YapiAdi</p>
                <p>@yapi.YapiFiyat</p>
                <p>@yapi.YapiSahip</p>
                <p>@yapi.YapiTarih</p>


            </div>

        </div>

    }
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var yapi in Model)
            {
                <div class="carousel-item">
                    <div class="box">
                        <div class="img-box">
                            <img src="@Url.Content("~/" + yapi.DosyaYolu.Replace(Server.MapPath("~"), ""))" alt=" " width="300" height="300">
                        </div>
                        <div class="detail-box">
                            <h4>
                                Minim Veniam
                            </h4>
                            <p>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
                                do eiusmod tempor incididunt ut labore et dolore magna
                                aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                                ullamco laboris nisi ut aliquip
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="carousel_btn-box">
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <i class="fa fa-angle-left" aria-hidden="true"></i>
                <span class="sr-only">Önceki</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <i class="fa fa-angle-right" aria-hidden="true"></i>
                <span class="sr-only">Sonraki</span>
            </a>
        </div>
    </div>

